import { Button } from "std-widgets.slint";

export component PathBreadcrumb inherits Rectangle {
    in property <string> current-path: "/";
    callback navigate(string);
    callback go-up();

    height: 32px;
    background: #f8f8f8;
    border-radius: 4px;
    border-width: 1px;
    border-color: #e0e0e0;

    HorizontalLayout {
        padding-left: 8px;
        padding-right: 4px;
        spacing: 4px;

        Button {
            text: "â¬†";
            width: 28px;
            clicked => { root.go-up(); }
        }

        Text {
            text: root.current-path;
            vertical-alignment: center;
            overflow: elide;
            horizontal-stretch: 1;
            font-size: 13px;
        }
    }
}
