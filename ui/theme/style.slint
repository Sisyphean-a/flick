// 全局样式常量
export global Style {
    // 颜色
    out property <color> primary: #007bff;
    out property <color> success: #28a745;
    out property <color> danger: #dc3545;
    out property <color> warning: #ffc107;
    out property <color> text-primary: #333333;
    out property <color> text-secondary: #666666;
    out property <color> text-muted: #888888;
    out property <color> bg-white: #ffffff;
    out property <color> bg-light: #f5f5f5;
    out property <color> bg-hover: #e8e8e8;
    out property <color> bg-selected: #d0e8ff;
    out property <color> border-color: #e0e0e0;
    out property <color> divider: #dddddd;

    // 字号
    out property <length> font-title: 24px;
